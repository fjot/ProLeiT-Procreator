{
    "compileOnSave": false,
    "compilerOptions": {
      "baseUrl": ".",
      "outDir": "./dist",
      "sourceMap": true,
      "declaration": false,
      "downlevelIteration": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "importHelpers": true,
      "target": "es6",
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": [
        "es2018",
        "dom"
      ],
      "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }